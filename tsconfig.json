{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "jsx": "react",
    "declarationDir": "./lib/",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./src/main.tsx",
    "./src/components/App.tsx",
    "./src/**/*.stories.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
        "./src/**/*"
    ]
  }
}